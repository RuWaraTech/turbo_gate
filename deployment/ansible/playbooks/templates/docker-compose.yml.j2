version: '3.8'

services:
  turbogate:
    image: {{ docker_registry | default('docker.io') }}/{{ image_name | default('fwande/turbogate') }}:{{ image_tag | default('latest') }}
    deploy:
      replicas: {{ app_replicas | default(2) }}
      update_config:
        parallelism: 1
        delay: 10s
        order: start-first
        failure_action: rollback
        monitor: 30s
        max_failure_ratio: 0.1
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      placement:
        constraints:
          - node.labels.role == worker
      resources:
        limits:
          cpus: '0.5'
          memory: 512M
        reservations:
          cpus: '0.25'
          memory: 256M
    environment:
      - FLASK_ENV=production
      - LOG_LEVEL=INFO
      - DOMAIN_NAME={{ domain_name }}
      - VERSION={{ version | default('unknown') }}
      # Don't set REDIS_URL here - it will be constructed in entrypoint
      # Don't set SECRET_KEY here - it will be read from secrets
    secrets:
      # The target name becomes the filename under /run/secrets/
      - source: turbogate_secret_key
        target: SECRET_KEY  # Creates /run/secrets/SECRET_KEY
        mode: 0444  # Readable by all users in container (including app user)
      - source: redis_password
        target: redis_password  # Creates /run/secrets/redis_password
        mode: 0444  # Readable by all users in container
    networks:
      - turbogate_network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/gateway/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  redis:
    image: redis:7-alpine
    deploy:
      replicas: 1
      placement:
        constraints: 
          - node.labels.role == manager
      restart_policy:
        condition: any
        delay: 5s
        max_attempts: 3
      resources:
        limits:
          cpus: '0.25'
          memory: 256M
        reservations:
          cpus: '0.1'
          memory: 128M
    # Use entrypoint to read password from secret file
    entrypoint: ["/bin/sh", "-c"]
    command: ["redis-server --requirepass \"$$(cat /run/secrets/redis_password)\""]
    secrets:
      - source: redis_password
        target: redis_password
        mode: 0444  # Readable by redis user
    networks:
      - turbogate_network
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "sh", "-c", "redis-cli --no-auth-warning -a \"$$(cat /run/secrets/redis_password)\" ping | grep -q PONG"]
      interval: 10s
      timeout: 3s
      retries: 5
      start_period: 20s

  nginx:
    image: nginx:alpine
    deploy:
      replicas: 1
      placement:
        constraints: 
          - node.labels.role == manager
      restart_policy:
        condition: any
        delay: 5s
        max_attempts: 3
      resources:
        limits:
          cpus: '0.25'
          memory: 256M
        reservations:
          cpus: '0.1'
          memory: 128M
    ports:
      - target: 80
        published: 80
        protocol: tcp
        mode: host
      - target: 443
        published: 443
        protocol: tcp
        mode: host
    volumes:
      - /etc/nginx/sites-available/turbogate:/etc/nginx/conf.d/default.conf:ro
      - /etc/letsencrypt:/etc/letsencrypt:ro
      - /var/www/certbot:/var/www/certbot:ro
      - nginx_logs:/var/log/nginx
      - nginx_cache:/var/cache/nginx
    networks:
      - turbogate_network
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/health", "||", "exit", "1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 40s

volumes:
  redis_data:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /var/lib/turbogate/redis
  nginx_logs:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /var/log/turbogate/nginx
  nginx_cache:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /var/cache/nginx

networks:
  turbogate_network:
    external: true
    name: turbogate_network

secrets:
  turbogate_secret_key:
    external: true
  redis_password:
    external: true