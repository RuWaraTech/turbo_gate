version: '3.8'

services:
  turbogate:
    image: {{ docker_registry | default('docker.io') }}/{{ image_name | default('fwande/turbogate') }}:{{ image_tag | default('latest') }}
    deploy:
      replicas: {{ app_replicas | default(3) }}  # Increased for better availability
      update_config:
        parallelism: 1
        delay: 30s  # Increased delay for stability
        order: start-first
        failure_action: rollback
        monitor: 60s  # Longer monitoring period
        max_failure_ratio: 0.1
      rollback_config:
        parallelism: 1
        delay: 10s
        order: stop-first
        monitor: 30s
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s
      placement:
        constraints:
          - node.labels.role == worker
        preferences:
          - spread: node.id  # Spread across different nodes
      resources:
        limits:
          cpus: '0.5'
          memory: 512M
        reservations:
          cpus: '0.25'
          memory: 256M
    environment:
      - FLASK_ENV=prod
      - LOG_LEVEL=INFO
      - DOMAIN_NAME={{ domain_name }}
      - VERSION={{ version | default('unknown') }}
    secrets:
      - source: turbogate_secret_key
        target: SECRET_KEY
        mode: 0444
      - source: redis_password
        target: redis_password
        mode: 0444
    networks:
      - turbogate_network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/gateway/health"]
      interval: 15s  # More frequent checks
      timeout: 5s
      retries: 3
      start_period: 45s
    depends_on:
      - redis

  redis:
    image: redis:7-alpine
    deploy:
      replicas: 1
      placement:
        constraints: 
          - node.labels.role == manager
      restart_policy:
        condition: any
        delay: 5s
        max_attempts: 3
      resources:
        limits:
          cpus: '0.25'
          memory: 256M
        reservations:
          cpus: '0.1'
          memory: 128M
    entrypoint: ["/bin/sh", "-c"]
    command: ["redis-server --requirepass \"$$(cat /run/secrets/redis_password)\""]
    secrets:
      - source: redis_password
        target: redis_password
        mode: 0444
    networks:
      - turbogate_network
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "sh", "-c", "redis-cli --no-auth-warning -a \"$$(cat /run/secrets/redis_password)\" ping | grep -q PONG"]
      interval: 10s
      timeout: 3s
      retries: 5
      start_period: 20s

  nginx:
    image: nginx:alpine
    deploy:
      replicas: 2  # Multiple NGINX instances for HA
      update_config:
        parallelism: 1
        delay: 15s
        order: start-first  # Critical for zero-downtime
        monitor: 30s
      placement:
        constraints: 
          - node.labels.role == manager
        preferences:
          - spread: node.id
      restart_policy:
        condition: any
        delay: 5s
        max_attempts: 3
      resources:
        limits:
          cpus: '0.25'
          memory: 256M
        reservations:
          cpus: '0.1'
          memory: 128M
    ports:
      - target: 80
        published: 80
        protocol: tcp
        mode: ingress  # Changed from host to ingress for load balancing
      - target: 443
        published: 443
        protocol: tcp
        mode: ingress
    configs:
      # Use configs instead of volume mounts
      - source: nginx_config
        target: /etc/nginx/conf.d/default.conf
        mode: 0444
    volumes:
      - /etc/letsencrypt:/etc/letsencrypt:ro
      - /var/www/certbot:/var/www/certbot:ro
      - nginx_logs:/var/log/nginx
      - nginx_cache:/var/cache/nginx
    networks:
      - turbogate_network
    healthcheck:
      test: ["CMD-SHELL", "curl -k -f http://localhost/health || exit 1"]
      interval: 15s
      timeout: 3s
      retries: 3
      start_period: 30s
    depends_on:
      - turbogate

volumes:
  redis_data:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /var/lib/turbogate/redis
  nginx_logs:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /var/log/turbogate/nginx
  nginx_cache:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: /var/cache/nginx

networks:
  turbogate_network:
    external: true
    name: turbogate_network

configs:
  nginx_config:
    external: true

secrets:
  turbogate_secret_key:
    external: true
  redis_password:
    external: true